<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chatItem_linearlayout_main"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:id="@+id/chatItem_linearlayout_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp">

            <ImageView
                android:id="@+id/chatItem_iv_profile"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"/>

       <!-- <TextView
            android:id="@+id/chatItem_tv_name"
            android:text="이름"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />-->
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_message"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            tools:text="채팅내용"
            android:padding="6dp"/>
        <TextView
            android:id="@+id/chatItem_tv_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="2011.11.11 11:11"
            android:layout_marginRight="5dp"
            android:textSize="9dp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

</LinearLayout>